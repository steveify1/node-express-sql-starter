{
	"root": true,
	"extends": ["airbnb", "eslint-config-node"],
	"env": {
		"node": true,
		"es6": true,
		"jasmine": true,
		"amd": true
	},
	"rules": {
		"spcaed-comments": "off",
		"no-console": "warn",
		"consistent-return": "off",
		"func-names": "off",
		"object-shorthand": "off",
		"no-process-exit": "off",
		"no-param-reassign": "off",
		"no-return-await": "off",
		"import-no-commomjs": "off",
		"": "off",
		"prefer-destructuring": ["error", { "object": true, "array": false }],
		"no-unused-vars": [
			"error",
			{ "argdIgnorePattern": "req|res|next|val|error" }
		],
		"no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }],
		"linebreak-style": ["error", "windows"],
		"comma-dangle": "off",
		"arrow-parens": "off",
		"arrow-body-style": "off"
	}
}
